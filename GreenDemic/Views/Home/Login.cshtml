@{
    ViewData["Title"] = "Login";
}

<h1 style="margin-left: auto; margin-right: auto; text-align: center;padding-top:50px;">Login</h1>

<form method="post" asp-controller="Home" asp-action="Login" style="width: 60%; padding-top: 30px; margin-left: auto; margin-right: auto; ">
    @if ((bool)ViewData["IsFailed"])
    {
        <div class="alert alert-danger">
            <strong>Uh Oh!</strong> Something went wrong. Please try again later
        </div>
    }
    <fieldset class="loginFieldset">
        <!--Email-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <label for="txtEmail" class="col-form-label" style=" color: azure">Email<span style="color: yellow;">*</span></label>
                <input type="email" name="txtEmail" id="txtEmail" class="form-control" required />
            </div>
        </div>

        <!--Password-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <label for="txtPassword" class="col-form-label" style=" color: azure">Password<span style="color: yellow;">*</span></label>
                <input type="password" name="txtPassword" id="txtPassword" class="form-control" required />
            </div>
        </div>

        <!--Submit Button-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <input type="submit" value="Login" class="btn" />
            </div>
        </div>

        <!--Error Message-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <span style="color: yellow; text-align: center">@TempData["Message"]</span>
            </div>
        </div>
    </fieldset>
</form>

