@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post" asp-controller="Home" asp-action="Login" style="width:60%;padding-top:30px;">
    <fieldset class="loginFieldset">
        <!--Email-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <label for="txtEmail" class="col-form-label">Email</label>
                <input type="email" name="txtEmail" id="txtEmail" class="form-control" required />
            </div>
        </div>

        <!--Password-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <label for="txtPassword" class="col-form-label">Password</label>
                <input type="password" name="txtPassword" id="txtPassword" class="form-control" required />
            </div>
        </div>

        <!--Submit Button-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
        </div>

        <!--Error Message-->
        <div class="form-group row d-flex align-items-center justify-content-center">
            <div class="col-sm-9">
                <span style="color: red; text-align: center">@TempData["Message"]</span>
            </div>
        </div>
    </fieldset>
</form>

