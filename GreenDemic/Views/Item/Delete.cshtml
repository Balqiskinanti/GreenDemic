@model GreenDemic.Models.ItemViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 style="padding-top: 100px;text-align:center;">Delete Item</h1>
<p style="text-align: center; padding-bottom: 50px;">Are you sure to delete this record?</p>

<div>
    <form asp-action="Delete" asp-route-sbID="@ViewData["ShoppingBagId"]" style="margin:0px 50px;">
        @if ((bool)ViewData["IsFailed"])
        {
            <div class="alert alert-danger">
                <strong>Uh Oh!</strong> Something went wrong. Please try again later
            </div>
        }
        <fieldset class="FormContent">
            <!--User ID-->
            <div hidden class="form-group row">
                <label asp-for="ItemID"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="ItemID" readonly
                           class="form-control-plaintext" />
                </div>
            </div>

            <!--User ID-->
            <div hidden class="form-group row">
                <label asp-for="ShoppingBagID"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="ShoppingBagID" readonly
                           class="form-control-plaintext" />
                </div>
            </div>

            <!--User Name-->
            <div class="form-group row">
                <label asp-for="ItemName"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="ItemName" readonly
                           class="form-control-plaintext" style=" color: #FFBF86;" />
                </div>
            </div>

            <!--Max Calories-->
            <div class="form-group row">
                <label asp-for="Category"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="Category" readonly
                           class="form-control-plaintext" style=" color: #FFBF86;" />
                </div>
            </div>

            <!--Max Calories-->
            <div class="form-group row">
                <label asp-for="Cal"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="Cal" readonly
                           class="form-control-plaintext" style=" color: #FFBF86;" />
                </div>
            </div>

            <!--User ID-->
            <div class="form-group row">
                <label asp-for="Qty"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="Qty" readonly
                           class="form-control-plaintext" style=" color: #FFBF86;" />
                </div>
            </div>

            <!--User ID-->
            <div class="form-group row">
                <label asp-for="CalSubTotal"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="CalSubTotal" readonly
                           class="form-control-plaintext" style=" color: #FFBF86;" />
                </div>
            </div>

            <!--Delete Btn-->
            <div class="col-12" style="text-align: center; color: #FF8C00;">
                <input type="submit" value="Delete" class="btn" />
            </div>
        </fieldset>
    </form>
    <div class="col-12" style="text-align:center;"><a asp-action="Index" asp-route-id="@ViewData["ShoppingBagId"]">Back to List</a></div>
</div>