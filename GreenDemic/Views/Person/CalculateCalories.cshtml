@model GreenDemic.Models.UserCalories

@{
    ViewData["Title"] = "CalculateCalories";
}

<h1 style="margin-left: auto; margin-right: auto; text-align: center;">Calculate Calories</h1>

<hr />
<div class="row">
    <div class="col-md-4" style="margin-left: auto; margin-right: auto; position: center">
        <form asp-action="CalculateCalories">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label" style=" color: azure"></label>
                <select asp-for="Gender"
                        asp-items="@ViewData["GenderList"] as List<SelectListItem>"
                        class="form-control">
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label" style=" color: azure"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label" style=" color: azure"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDay" class="control-label" style=" color: azure"></label>
                <input asp-for="BirthDay" class="form-control" />
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseType" class="control-label" style=" color: azure"></label>
                <select asp-for="ExerciseType"
                        asp-items="@ViewData["ExTypeList"] as List<SelectListItem>"
                        class="form-control">
                </select>
                <span asp-validation-for="ExerciseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" style="color: #FF8C00;" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left: auto; margin-right: auto; text-align: center;">
    <a asp-action="Create">Cancel</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
