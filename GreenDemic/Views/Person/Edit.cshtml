@model GreenDemic.Models.Person

@{
    ViewData["Title"] = "Edit";
}

<h1 style="padding-top: 100px; padding-bottom: 50px; margin-left: auto; margin-right: auto; text-align: center;">Edit Person</h1>

<div class="row" style="margin-right:0;">
    <div class="col-md-4" style="margin-left: auto; margin-right: auto; position: center">
        <form asp-action="Edit">
            @if ((bool)ViewData["IsFailed"])
            {
                <div class="alert alert-danger">
                    <strong>Uh Oh!</strong> Something went wrong. Please try again later
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="UserID" class="control-label" style=" color: azure"></label>
                <input readonly asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" style="color: yellow;"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="UserName" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" style="color: yellow;"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="Gender" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <select asp-for="Gender"
                        asp-items="@ViewData["GenderList"] as List<SelectListItem>"
                        class="form-control">
                </select>
                <span asp-validation-for="Gender" style="color: yellow;"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="Weight" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" style="color: yellow;"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="Height" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" style="color: yellow;"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="Birthday" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" style="color: yellow;"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="ExType" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <select asp-for="ExType"
                        asp-items="@ViewData["ExTypeList"] as List<SelectListItem>"
                        class="form-control">
                </select>
                <span asp-validation-for="ExType" style="color: yellow;"></span>
            </div>
            <div hidden class="form-group">
                <div><label asp-for="MaxCal" class="control-label" style=" color: azure"></label><span style="color: yellow;">*</span></div>
                <input asp-for="MaxCal" class="form-control" />
                <span asp-validation-for="MaxCal" style="color: yellow;"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AccID" class="control-label"></label>
                <input readonly asp-for="AccID" class="form-control" />
                <span asp-validation-for="AccID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" style="color: #FF8C00;" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left: auto; margin-right: auto; text-align: center;">
    <a asp-action="Index">Back to list</a>
</div>

