@model GreenDemic.Models.Person

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <p style="text-align:center;">Are you sure to delete this record?</p>
    <form asp-action="Delete" style="margin:0px 50px;">
        <fieldset class="FormContent">
            <!--User ID-->
            <div class="form-group row">
                <label asp-for="UserID"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="UserID" readonly
                           class="form-control-plaintext" />
                </div>
            </div>

            <!--User Name-->
            <div class="form-group row">
                <label asp-for="UserName"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="UserName" readonly
                           class="form-control-plaintext" />
                </div>
            </div>

            <!--Max Calories-->
            <div class="form-group row">
                <label asp-for="MaxCal"
                       class="col-form-label col-6 font-weight-bold" style="text-align:end;"></label>
                <div class="col-6">
                    <input asp-for="MaxCal" readonly
                           class="form-control-plaintext" />
                </div>
            </div>

            <!--Delete Btn-->
            <div class="col-12" style="text-align:center;">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </fieldset>
    </form>
    <div class="col-12" style="text-align:center;"><a asp-action="Index">Back to List</a></div>
</div>
